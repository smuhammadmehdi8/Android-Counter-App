<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/textView"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:text="Counter App"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textColor="#002B6A"
            android:textSize="48sp"
            app:layout_constrainedEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:ignore="HardcodedText,RtlCompat"
            tools:layout_editor_absoluteY="-5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"/>


    <TextView
            android:id="@+id/counter"
            android:layout_width="355dp"
            android:layout_height="120dp"
            android:text="0"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-black"
            android:textAlignment="center"
            android:textColor="#2C0449"
            android:textSize="100sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toTopOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,RtlCompat"
            app:layout_constraintTop_toBottomOf="@id/textView"
            android:layout_marginStart="24dp" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:id="@+id/inc"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:fontFamily="sans-serif-black"
            android:text="+"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/counter"
            app:layout_constraintVertical_bias="0.369"
            tools:ignore="HardcodedText,MissingConstraints"
            android:layout_marginStart="112dp"
            app:layout_constraintHorizontal_bias="0.025"/>
    <Button
            android:id="@+id/dec"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:text="-"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inc"
            tools:ignore="HardcodedText,MissingConstraints,RtlCompat"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:id="@+id/reset"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_marginTop="50dp"
            android:text="Reset"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dec"
            tools:ignore="HardcodedText,MissingConstraints,RtlCompat"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>

